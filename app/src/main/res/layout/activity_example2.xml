<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:padding="30dp"
    tools:context=".Example2Activity">

    <TextView
        android:id="@+id/scoreBoard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginBottom="30dp"
        android:textStyle="bold"
        android:textColor="#FF0000"
        android:textSize="25sp"
        />

    <Button
        android:id="@+id/increaseScore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Increase Score"
        android:textAllCaps="true"
        android:layout_below="@id/scoreBoard"
        />

    <Button
        android:id="@+id/decreaseScore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Decrease Score"
        android:textAllCaps="true"
        android:layout_below="@id/increaseScore"
        android:layout_marginTop="10dp"
        />
</RelativeLayout>